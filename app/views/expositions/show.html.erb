<div id="expoShowCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
  <div class="carousel-inner">
    <div class="under-nav"></div>
    <% @expo.artworks.each_with_index do |aw, i| %>
      <div class="carousel-item <%= 'active' if i == 0 %>">
        <%= cl_image_tag aw.photo.key %>
        <div class="carousel-caption">
          <div class="carousel-caption-content">
            <h4><%= aw.name %></h4>
            <%= link_to t('buttons.see_details').downcase, artwork_path(aw) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div id="expoShowCarouselControls">
    <a class="carousel-control-prev" href="#expoShowCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#expoShowCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
