<div class="gallery">
  <div class="side-bar">
    <div class="current-expo-title">
      <div class="arrow-down"></div>
      <%= link_to gallery_path, remote: true do %>
        <h3 id="expo-title-content"><%= @expo.name %></h3>
      <% end %>
      <div class="arrow-down"></div>
    </div>
    <div class="expo-titles">
      <% @expos.each do |expo| %>
        <a href="" data-remote="true" class="expo-title"><%= expo.name %></a>
      <% end %>
    </div>
  </div>
  <div class="gallery-content">
    <div class="under-nav"></div>
    <div class="container">
      <div class="title">
        <h2>gallery</h2>
      </div>
      <% @expos.each do |expo| %>
        <div id="<%= expo.name %>" class="expo-content">
          <h3><%= expo.name %></h3>
          <% expo.artworks.each do |aw| %>
            <%= link_to artwork_path(aw) do %>
              <h4><%= aw.name %></h4>
            <% end %>
            <% if aw.photo.attached? %>
              <%= cl_image_tag aw.photo.key, height: 300, width: 400, crop: :fill %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'current_expo_show' %>
<%= javascript_pack_tag 'sidebar_expand' %>
